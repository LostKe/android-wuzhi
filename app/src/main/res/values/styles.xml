<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="linear_item_tv">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:drawablePadding">10dip</item>
        <item name="android:textColor">@color/linear_item_tv</item>
    </style>


    <style name="dialog_item">
       <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="button_common_blue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:background">@drawable/btn_blue_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:src">@drawable/arrow</item>
    </style>

    <style name="diary_item">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">2dp</item><!--设置行间距-->
        <item name="android:lineSpacingMultiplier">1.2</item><!--设置行间距的倍数-->
        <item name="android:textSize">15sp</item>
    </style>

    <!--toobar 上title 的样式-->
    <style name="toolbar_title_style" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/toolbarTextSize</item>
    </style>

    <!-- toolbar 上menu 字体的样式-->
    <style name="AppTheme.actionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:textSize">@dimen/toolbarTextSize</item>
    </style>


    <style name="dialog_common" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>

    <style name="dialog_bottom" parent="@style/dialog_common">
        <item name="android:windowBackground">@drawable/dialog_bottom_background</item>
    </style>

    <style name="linnerlayout_item">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/select_item_list</item>
        <item name="android:clickable">true</item>
    </style>
    
</resources>
