<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="color_custom" format="color" />
    <attr name="color_move" format="color" />
    <attr name="color_error" format="color" />
    <attr name="line_custom_size" format="float" />
    <attr name="line_move_size" format="float" />
    <attr name="count" format="integer"/>
    <attr name="tryTimes" format="integer" />
    <attr name="dotSize" format="integer"></attr>
    <attr name="normal_color" format="color"></attr>
    <attr name="action_color" format="color"></attr>

    <attr name="text_size" format="integer"/>
    <attr name="text_color" format="color"/>
    <attr name="left_button" format="reference"/>
    <attr name="right_button" format="reference"/>
    <attr name="left_text" format="string"/>
    <attr name="right_text" format="string"/>



    <declare-styleable name="GestureLockViewGroup">
        <attr name="color_custom" />
        <attr name="color_move" />
        <attr name="color_error" />
        <attr name="line_custom_size"/>
        <attr name="line_move_size"/>
        <attr name="count"  />
        <attr name="tryTimes" />
    </declare-styleable>


    <declare-styleable name="DotViewGroup">
        <attr name="count"/>
        <attr name="dotSize"/>
        <attr name="normal_color"/>
        <attr name="action_color"/>

    </declare-styleable>


    <declare-styleable name="Topbar">
        <attr name="text_size"></attr>
        <attr name="text_color"></attr>
        <attr name="left_button"></attr>
        <attr name="right_button"></attr>
        <attr name="left_text"/>
        <attr name="right_text"/>
    </declare-styleable>



    <declare-styleable name="a_zhon">
        <!--每条线的粗细-->
        <attr name="paintBold" format="dimension" />
        <!--每条线的长度-->
        <attr name="lineLength" format="dimension" />
        <!--线条个数-->
        <attr name="lines" format="integer" />
        <!--最大进度-->
        <attr name="max" format="integer" />
        <!--当前进度-->
        <attr name="progress" format="integer" />
        <!--背景的颜色-->
        <attr name="backgroundColor" format="reference|color" />
        <!--前景的颜色-->
        <attr name="beforeColor" format="reference|color" />
        <!--进度文字颜色-->
        <attr name="textColor" format="reference|color" />
    </declare-styleable>


</resources>