<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/lv_user_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_bottom"
        android:lineSpacingExtra="4dp"
        android:listSelector="@android:color/transparent">
    </ListView>





    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/day_line_color" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_select_all"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="全选"
                android:gravity="center"
                android:textColor="@color/diary_head_text"
                android:textSize="18sp"
                android:background="@drawable/select_item_list"
                />


            <Button
                android:id="@+id/bt_select_un_all"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="反选"
                android:gravity="center"
                android:textColor="@color/diary_head_text"
                android:textSize="18sp"
                android:background="@drawable/select_item_list"
                />


            <Button
                android:id="@+id/bt_send_bottom"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="发送"
                android:gravity="center"
                android:textColor="@color/diary_head_text"
                android:textSize="18sp"
                android:background="@drawable/select_item_list"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>