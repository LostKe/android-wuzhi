<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_primary_diary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:paddingRight="10dp">
            <TextView
                style="@style/linear_item_tv"
                android:text="公开日记"/>
            <zs.com.wuzhi.widget.SwitchView
                android:id="@+id/primary_diary_switch"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <include layout="@layout/linear_line"></include>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_primary_gesture_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:paddingRight="10dp">

            <TextView
                style="@style/linear_item_tv"
                android:text="手势密码"/>
            <zs.com.wuzhi.widget.SwitchView
                android:id="@+id/primary_gesture_switch"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <include layout="@layout/linear_line"></include>

    </LinearLayout>





    <LinearLayout
        android:id="@+id/ll_primary_getsture_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout

            style="@style/linnerlayout_item">
            <TextView
                style="@style/linear_item_tv"
                android:text="修改手势密码"/>
            <ImageView
                style="@style/arrow"/>
        </LinearLayout>
        <include layout="@layout/linear_line"></include>

    </LinearLayout>




</LinearLayout>